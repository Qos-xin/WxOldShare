<!--pages/address/index.wxml-->
<view wx:for="{{address}}" class="address-wrap">
  <view class='infor-top'>
    <view>
      <text>{{item.name}}</text>
      <text>{{item.phone}}</text>
    </view>
    <view>{{item.address}}</view>
  </view>
  <view class='btn-wrap'>
    <button class='choose-btn weui-btn weui-btn_mini weui-btn_default' bindtap='onSelectAddress' data-index='{{index}}'>选择地址</button>
    <text class='' id='{{item.id}}' bindtap='onDeleteAddress'>删除</text>
  </view>
</view>
<navigator url='/pages/address/add' class='add-btn'>新建地址</navigator>