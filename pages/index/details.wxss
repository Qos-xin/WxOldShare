/* pages/index/details.wxss */

.comment {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 1rem 0;
  font-size: 0.8rem;
  justify-content: space-between;
}

.comment-body {
  display: flex;
  flex-direction: column;
  margin-left: 0.5rem;
  color: #666;
}

.comment-title {
  font-size: 0.85rem;
}

.comment-content {
  color: black;
  font-size: 1rem;
}

.comment-footer {
  font-size: 0.65rem;
}
.comment input{
  border: 1px solid #ccc;
}
.comment button{
  margin: 0;
  border-radius:0;
}
.bottomBar{
  background-color: #eee;
  padding: 20rpx;
  width:100%;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
}
.favorite{
  font-size: 1rem;
}
.link{
  padding: 10rpx 40rpx;
  border: 1px solid #666;
  border-radius:5px;
  background-color: green;
  margin-right: 30rpx;
  color: white;

}