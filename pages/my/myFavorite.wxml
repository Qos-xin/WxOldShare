<!--pages/my/myFavorite.wxml-->
<view class="weui-panel__bd" wx:for="{{favorite}}">
  <navigator class="weui-media-box weui-media-box_appmsg" url='/pages/index/details?id={{item.product.id}}'>
    <view class="weui-media-box__hd">
      <image class="weui-media-box__thumb" src='{{item.product.image}}'></image>
    </view>
    <view class="weui-media-box__bd">
      <text class="weui-media-box__title">{{item.product.intro}}</text>
      <view class="weui-media-box__desc">
        <image src='/images/cookie.png' class='egg-img'></image>
        <text>{{item.product.price}}饼干</text>
      </view>
    </view>
  </navigator>
</view>